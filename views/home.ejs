<%- include('partials/header') %>

<section class="hero">
  <h1>Free document tools for students, careers, and PDF fixes</h1>
  <p>No login. No paywall. Fast tools built for high-intent document problems.</p>
</section>

<% categories.forEach((category) => { %>
  <section id="<%= category.key %>" class="category">
    <h2><%= category.name %></h2>
    <div class="tool-grid">
      <% category.tools.forEach((tool) => { %>
        <article class="tool-card">
          <h3><a href="/tools/<%= tool.slug %>"><%= tool.title %></a></h3>
          <p><%= tool.description %></p>
        </article>
      <% }) %>
    </div>
  </section>
<% }) %>

<%- include('partials/footer') %>
